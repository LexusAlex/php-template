{
    "require": {
        "robmorgan/phinx": "^0.12.4",
        "ext-pdo": "*",
        "filp/whoops": "^2.9",
        "slim/psr7": "^1.3",
        "php-di/php-di": "^6.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4",
        "fzaninotto/faker": "^1.9",
        "lexusalex/composer-package": "0.1"
    },
    "autoload": {
        "psr-4": {
            "Application\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "XDEBUG_MODE=coverage phpunit --coverage-html var/test/coverage",
        "phinx": "phinx"
    }
}
